readonly nmcli="$(nmcli c|tail +2|grep -v -- --)"
readonly uplink="$(<<< $nmcli egrep '(wifi|ethernet)'|cut -d' ' -f1)"
readonly vpn="$(<<< $nmcli grep wireguard|cut -d' ' -f1)"

if [ -n "$uplink" ]; then
    echo -n "<active>ğŸŒï¸ $uplink</active>"
else
    echo -n "<error>ğŸŒï¸ uplink</error>"
fi

echo -n ' '
if [ -n "$vpn" ]; then
    echo -n "<active>ğŸ”’ï¸$vpn</active>"
else
    echo -n 'ğŸ”“ï¸ VPN'
fi

echo
exit 0
