# depends: nmcli

readonly nmcli="$(nmcli c|tail +2|grep -v -- --)"
readonly vpn="$(<<< $nmcli grep -E '(wireguard|vpn)'|cut -d' ' -f1)"

if [ -n "$vpn" ]; then
    echo -n "<active>ðŸ”’ï¸Ž$vpn</active>"
else
    echo -n 'ðŸ”“ï¸Ž VPN'
fi

echo
exit 0
